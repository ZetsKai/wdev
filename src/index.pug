doctype html
html(lang="en", data-theme="light")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title wdev
		link(type="text/css", rel="stylesheet", href="index.bundle.css")
		link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
		script(src="https://kit.fontawesome.com/335e64dc15.js" crossorigin="anonymous")
		script(defer src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous")
		script(defer type="module" src="index.bundle.js")

	body
		nav.bar.red-border.top
			each val in ["File", "Help", "Remove tag"]
				button.top__button=val

		.bar.red-border.sidebar.sidebar--tools
			each val in ["DIV", "P", "HEADER", "MAIN", "ARTICLE", "SECTION", "FOOTER", "BUTTON" ]
				button.blue.sidebar--tools__button=val

		.bar.red-border.sidebar.sidebar--list
			.blue tags

		#page-view

		.bar.red-border.sidebar.sidebar--edit(test="penis")
			input.tag-name(value="None")

			details#layout
				summary layout
				div display
				each val in ["grid", "flex", "block", "inline", "inline"]
					label(for=val)=val+':'
					input(type="checkbox", name=val).css-property
					br
				br
				div position
					br
					label(for="grid-area") grid-area:
					input(type="text" name="grid-area")
				each val in ["relative", "absolute", "static"]
					label(for=val)=val+':'
					input(type="checkbox", name=val).css-property
					br
				br
				
			details#colors
				summary colors
				each val in ["background-color", "text-color", "border-color"]
					div=val+':'
					input(id=val, type="text", name=val).css-property
			details#more
				summary more~
				input.css-property


